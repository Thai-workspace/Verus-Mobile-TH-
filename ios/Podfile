platform :ios, '12.0'
require_relative '../node_modules/@react-native-community/cli-platform-ios/native_modules'
$dynamic_frameworks = [
  'react-native-verus-light-client', 
  'React',
  'React-Core',
  'Folly',
  'boost-for-react-native',
  'DoubleConversion',
  'glog',
  'React-cxxreact',
  'React-jsinspector',
